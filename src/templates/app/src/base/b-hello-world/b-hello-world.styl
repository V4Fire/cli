@import "super/i-block/i-block.styl"

$p = {
	borderColor: #CCC
	bgColor: #F7F7F7
}

b-hello-world extends i-block
	size 200px
	margin auto
	padding 16px
	border 1px solid $p.borderColor
	text-align center

	:before
		content ""

		display block
		size 100px
		margin 16px

		background img("assets/img/v4fire.png")
		background-size cover

	&__content
		padding 16px
		background $p.bgColor

		h1
			padding 8px 0

	&__button
		padding 16px

	&__counter
		font-size 12px
